[Unit]
Description=Hive-Mind HTTP API Server
After=network.target hivecoder-llm.service
Wants=hivecoder-llm.service
Documentation=https://github.com/tlee933/hive-mind

[Service]
Type=simple
User=hashcat
Group=hashcat
WorkingDirectory=/var/mnt/build/MCP/hive-mind/mcp-server
Environment="CONFIG_PATH=/var/mnt/build/MCP/hive-mind/config.yaml"
Environment="HTTP_HOST=0.0.0.0"
Environment="HTTP_PORT=8090"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/var/mnt/build/MCP/hive-mind/.venv/bin/python http_server.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hive-mind-http

# Resource limits
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
